<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
    android:background="@color/primary"
    android:elevation="4dp"
	android:showDividers="middle"
	tools:ignore="Overdraw">

	<!--android:background="#37474f"-->

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="@dimen/left_drawer_header_image_height"
		android:scaleType="fitXY"
		android:src="@drawable/header_image_left_drawer"/>

	<TextView
		android:id="@+id/bBible"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
        android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_bible"
		android:drawablePadding="16dp"
        android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuBible"
        android:focusable="false" />

	<TextView
		android:id="@+id/bDevotion"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_devotion"
		android:drawablePadding="16dp"
        android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuDevotion" />

	<TextView
		android:id="@+id/bReadingPlan"
        style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
		android:drawableLeft="@drawable/ic_drawer_reading_plan"
		android:drawablePadding="16dp"
        android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/rp_menuReadingPlan" />

	<TextView
		android:id="@+id/bBookmarks"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:drawableLeft="@drawable/ic_attr_bookmark"
		android:drawablePadding="16dp"
		android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuBookmarks" />

	<TextView
		android:id="@+id/bNotes"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:drawableLeft="@drawable/ic_attr_note"
		android:drawablePadding="16dp"
		android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuNotes" />

	<TextView
		android:id="@+id/bHighlights"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:drawableLeft="@drawable/ic_attr_highlight"
		android:drawablePadding="16dp"
		android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuHighlights" />

	<TextView
		android:id="@+id/bSongs"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_songs"
		android:drawablePadding="16dp"
        android:textSize="16sp"
		android:gravity="left|center_vertical"
		android:text="@string/menuSongs"
		android:visibility="gone"/>

</LinearLayout>