<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<EditText
				android:id="@+id/tServer"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ems="10"
				android:hint="server protocol and host without ending /" />

			<Button
				android:id="@+id/bServerSave"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:text="Save" />

			<Button
				android:id="@+id/bServerReset"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:text="Reset" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<EditText
				android:id="@+id/tUserEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="textEmailAddress"
				android:text="\@debug" />

		</LinearLayout>

		<Button
			android:id="@+id/bLogout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Logout" />

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="MABEL"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<Button
			android:id="@+id/bMabelClientState"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Show client state" />

		<Button
			android:id="@+id/bGenerateDummies"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="mk dummy 10 M, 2 L" />

		<Button
			android:id="@+id/bGenerateDummies2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="mk dummy 1000 M, 2 L" />

		<Button
			android:id="@+id/bMabelMonkey"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="monkey (You will lose your data)" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="true"
			android:orientation="horizontal">

			<Button
				android:id="@+id/bSync"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SYNC" />

			<CheckBox
				android:id="@+id/cMakeDirtyMarker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				android:text="make dirty: M" />

			<CheckBox
				android:id="@+id/cMakeDirtyLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				android:text="L" />

			<CheckBox
				android:id="@+id/cMakeDirtyMarker_Label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				android:text="M_L" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Spinner
				android:id="@+id/cbSyncSetName"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" />

			<Button
				android:id="@+id/bCheckHash"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="check hash" />
		</LinearLayout>

	</LinearLayout>
</android.support.v4.widget.NestedScrollView>