<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
    android:background="@color/primary"
    android:elevation="4dp"
	android:showDividers="middle"
	tools:ignore="Overdraw">

	<!--android:background="#37474f"-->
	<Button
		android:id="@+id/bVersions"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_menu_help"
		android:drawablePadding="16dp"
		android:gravity="left|center_vertical"
		android:text="Versions"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="16sp"
		android:clickable="true" />



	<Button
		android:id="@+id/bSettings"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_menu_preferences"
		android:drawablePadding="16dp"
		android:gravity="left|center_vertical"
		android:text="@string/menuPengaturan"
        android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="16sp"
        android:clickable="true"
        android:elegantTextHeight="true" />

	<Button
		android:id="@+id/bHelp"
		style="?buttonBarButtonStyle"
		android:textColor="?android:textColorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_menu_help"
		android:drawablePadding="16dp"
		android:gravity="left|center_vertical"
		android:text="@string/menuBantuan"
        android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="16sp"
		android:visibility="gone"
        android:clickable="true" />

</LinearLayout>