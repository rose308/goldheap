<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Alkitab" parent="Theme.Alkitab.Base">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="android:colorAccent">@color/accent</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="Theme.Alkitab.DialogWhenLarge" parent="Theme.Alkitab.DialogWhenLarge.Base">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="android:colorAccent">@color/accent</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="Theme.Alkitab.Transparent" parent="Theme.Alkitab.Transparent.Base">
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="Theme.PopupActivity" parent="Theme.PopupActivity.Base">
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>
</resources>